var fs = require('fs');
 
console.log("START");
 
var content = fs.readFile("./myfile.txt", 'utf8', function(error, data){
    console.log('Data: ' + data);
    console.log('Error: ' + error);
});
 
console.log("END");

var fs = require('fs');
console.log("START");
var content = fs.readFileSync('./myfile.txt');
console.log("CONTENT: " + content);
console.log("END");

var fs = require('fs');
console.log("START");
fs.writeFile('./myfile.txt', 'Noi dung file moi cap nhat', {}, function(err){
    console.log('Ghi file xong!');
});
console.log("END");

var fs = require('fs');
console.log("START");
fs.writeFileSync('./myfile.txt', 'Noi dung file moi cap nhat');
console.log("GHI XONG");
console.log("END");
var fs = require('fs');
fs.access('./hahaa', fs.constants.F_OK, (err) => {
  console.log(err)
  if(err) {
    console.log('Khong ton tai')
  } else {
    console.log('Ton tai')
  }
})

const fs = require('fs')
const folderName = '/home/hungnv/test'

try {
if (!fs.existsSync(folderName)){
fs.mkdirSync(folderName)
}
} catch (err) {
console.error(err)
}

const fs = require('fs')
const path = require('path')
const folderPath = '/home/hungnv'

const arr = fs.readdirSync(folderPath).map(fileName => {
  return path.join(folderPath, fileName)
});

console.log(arr)

const isFile = fileName => {
  return fs.lstatSync(fileName).isFile()
}
const file = fs.readdirSync(folderPath).map(fileName => {
return path.join(folderPath, fileName)
}).filter(isFile);

console.log(file, 'file')

